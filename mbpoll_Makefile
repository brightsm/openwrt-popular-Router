include $(TOPDIR)/rules.mk

PKG_NAME:=mbpoll
PKG_VERSION:=1.5.2
PKG_RELEASE:=1

PKG_SOURCE_PROTO:=git
PKG_SOURCE_URL:=https://github.com/epsilonrt/mbpoll.git
PKG_SOURCE_VERSION:=v$(PKG_VERSION)
PKG_MIRROR_HASH:=skip


# ğŸ‘‡ å…³é”®ï¼šå¯ç”¨è¡¥ä¸æ”¯æŒï¼ˆå³ä½¿ä½¿ç”¨ gitï¼‰
include $(INCLUDE_DIR)/package.mk

# ğŸ‘‡ æ˜¾å¼å®šä¹‰ Patch æ­¥éª¤ï¼ˆå¯é€‰ï¼Œä½†æ¨èï¼‰
define Build/Prepare
	$(call Build/Prepare/Default)
	$(if $(strip $(PATCH_DIR)),$(call PatchDir,$(PKG_BUILD_DIR),$(PATCH_DIR),*))
endef

define Package/mbpoll
  SECTION:=utils
  CATEGORY:=Utilities
  TITLE:=Modbus TCP/RTU polling tool
  DEPENDS:=+libmodbus
endef

define Package/mbpoll/description
  mbpoll is a command line Modbus master simulator
endef

# CMake é€‰é¡¹ï¼ˆå¯é€‰ï¼‰
CMAKE_OPTIONS += \
	-DCMAKE_BUILD_TYPE=Release \
	-DLIBMODBUS_INCLUDE_DIR=$(STAGING_DIR)/usr/include \
	-DLIBMODBUS_LIBRARY=$(STAGING_DIR)/usr/lib/libmodbus.so

define Package/mbpoll/install
	$(INSTALL_DIR) $(1)/bin
	$(INSTALL_BIN) $(PKG_BUILD_DIR)/mbpoll $(1)/bin/
endef

$(eval $(call BuildPackage,mbpoll))




